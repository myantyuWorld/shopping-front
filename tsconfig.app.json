{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "**/*.stories.ts", "**/*.test.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "strict": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
